@namespace Blazor.NLDesignSystem.Components
<ul class="list list--timeline @(HasColor ? $"list--timeline-{DisplayColor}" : string.Empty) @(!IndicateStart ? "list--timeline-no-start" : string.Empty) @(!IndicateEnd ? "list--timeline-no-end" : string.Empty) @(IsCompact ? "list--timeline-compact": string.Empty) @(IsLarge ? "list--timeline-large": string.Empty)">
    <CascadingValue Name="HeadingNumber" Value="@HeadingNumber" IsFixed="true">
        <CascadingValue Name="IsLarge" Value="@IsLarge" IsFixed="true">
            @ChildContent
        </CascadingValue>
    </CascadingValue>
</ul>