@namespace Blazor.NLDesignSystem.Components
<div class="input @LabelAlignmentStyle @(!IsValid ? "input--invalid" : "")">
    <CascadingValue Name="ElementIdentifier" Value="@Identifier">
        @if (LabelAlignment == LabelAlignment.Horizontal)
        {
            <div>
                @Label
                @Hint
            </div>
        }
        else
        {
            @Label
            @Hint
        }
        @if (!IsValid)
        {
            <NldsError>@((MarkupString)DisplayErrorText)</NldsError>
        }
    </CascadingValue>
    <div class="input__control-group" @attributes="GetAttributes()">
        <div>
            <label class="input__hint" for="@(Identifier)-d">@LabelDay</label>
            <input aria-label="@DescriptionDay" 
                   title="@DescriptionDay" 
                   type="number" 
                   min="1" 
                   max="31" 
                   id="@(Identifier)-d" 
                   class="input__control input__control--two-characters input__control--linked input__control--text"
                   disabled="@IsDisabled"
                   required="@IsRequired" 
                   @bind="Day" />
        </div>
        <div>
            <label class="input__hint" for="@(Identifier)-m">@LabelMonth</label>
            <input aria-label="@DescriptionMonth" 
                   title="@DescriptionMonth" 
                   type="number"
                   min="1" 
                   max="12" 
                   id="@(Identifier)-m" 
                   class="input__control input__control--two-characters input__control--linked input__control--text"
                   disabled="@IsDisabled"
                   required="@IsRequired"
                   @bind="Month" />
        </div>
        <div>
            <span class="input__hint" for="@(Identifier)-y">@LabelYear</span>
            <input aria-label="@DescriptionYear" 
                   title="@DescriptionYear" 
                   type="number" 
                   id="@(Identifier)-y" 
                   class="input__control input__control--four-characters input__control--linked input__control--text"
                   disabled="@IsDisabled"
                   required="@IsRequired"
                   @bind="Year" />
        </div>
    </div>
</div>