@namespace Blazor.NLDesignSystem.Components
    <ul @ref="NavigationListReference" @attributes="GetAttributes()">
        @if (HasSubNavigationPopout)
        {
            <CascadingValue Name="IsInSubNavigation" Value="true" IsFixed="true">
                @ChildContent
            </CascadingValue>
        }
        else
        {
            @ChildContent
        }
    </ul>